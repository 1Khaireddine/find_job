%section.section.register-login.d-flex.flex-column.align-items-center.justify-content-center.py-5
  .container
    .row.justify-content-center
      .col-lg-8.col-md-12.d-flex.flex-column.align-items-center.justify-content-center
        .card
          .card-body
            = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"row g-3 needs-validation", method: :put}) do |f|
              = render "devise/shared/error_messages", resource: resource
              .col-12
                .profile-picture.text-center
                  - if current_user.avatar.present?
                    = image_tag(current_user.avatar.variant(resize_to_fill: [128, 128]), class: "rounded-circle")
              .col-sm-12.col-md-6.mb-3
                = f.label :first_name, class: "form-label"
                = f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control"
              .col-sm-12.col-md-6.mb-3
                = f.label :last_name, class: "form-label"
                = f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control"
              .col-sm-12.col-md-6.mb-3
                = f.label :birthdate, class: "form-label"
                = f.date_field :birthdate, autofocus: true, autocomplete: "birthdate", class: "form-control"
              .col-sm-12.col-md-6.mb-3
                = f.label :avatar, class: "form-label"
                = f.file_field :avatar, class: "form-control"
              .col-12.mb-3
                = f.label :email, class: "form-label"
                = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
              .col-sm-12.mb-3
                .d-flex
                  = f.label :gender, class: "form-label"
                  .form-check
                    = f.radio_button :gender, "male", class: "choice-btn__input"
                    = label_tag(:user_gender_male, "Male") do
                      %i.fa-solid.fa-person
                  .form-check
                    = f.radio_button :gender, "female", class: "choice-btn__input"
                    = label_tag(:user_gender_female, "Female") do
                      %i.fa-solid.fa-person-dress
              .col-sm-12.col-md-6.mb-3
                = f.label :password, class: "form-label"
                = f.password_field :password, autocomplete: "new-password", class: "form-control"
              .col-sm-12.col-md-6.mb-3
                = f.label :password_confirmation, class: "form-label"
                = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
              .col-12.mb-3
                = f.label :current_password, class: "form-label"
                = f.password_field :current_password, autocomplete: "new-password", class: "form-control"
              .col-12
                %button.btn.btn-primary.w-100{:type => "submit"} Update
          .card-footer
            .col-12
              .row
                .col-sm-6
                  = link_to "Back", :back, class: "btn btn-success w-100"
                .col-sm-6
                  = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger w-100"